<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/typeIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:src="@mipmap/ic_bar"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/default_margin"
            android:layout_toRightOf="@id/typeIcon"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/resultTitle"
                android:layout_width="@dimen/place_title_width"
                android:layout_height="wrap_content"
                style="@style/PlaceTitle" />

            <LinearLayout
                android:id="@+id/ratingContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/rating1"
                    android:layout_width="@dimen/rating_dimen"
                    android:layout_height="@dimen/rating_dimen"
                    android:src="@mipmap/star_grey"/>
                <ImageView
                    android:id="@+id/rating2"
                    android:layout_width="@dimen/rating_dimen"
                    android:layout_height="@dimen/rating_dimen"
                    android:src="@mipmap/star_grey"/>
                <ImageView
                    android:id="@+id/rating3"
                    android:layout_width="@dimen/rating_dimen"
                    android:layout_height="@dimen/rating_dimen"
                    android:src="@mipmap/star_grey"/>
                <ImageView
                    android:id="@+id/rating4"
                    android:layout_width="@dimen/rating_dimen"
                    android:layout_height="@dimen/rating_dimen"
                    android:src="@mipmap/star_grey"/>
                <ImageView
                    android:id="@+id/rating5"
                    android:layout_width="@dimen/rating_dimen"
                    android:layout_height="@dimen/rating_dimen"
                    android:src="@mipmap/star_grey"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/resultDistance"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            style="@style/distanceLight"
            android:layout_margin="@dimen/default_margin" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>